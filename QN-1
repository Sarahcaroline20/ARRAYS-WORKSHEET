#include <iostream>
using namespace std;

int main() {
    int n, i, searchValue, flag = 0;

    cout << "Enter number of elements in array: ";
    cin >> n;

    int arr[100];

    cout << "Enter " << n << " elements:\n";
    for (i = 0; i < n; i++) {
        cin >> arr[i];
    }

    // Traversing
    cout << "\nArray elements are: ";
    for (i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    // Searching
    cout << "\n\nEnter element to search: ";
    cin >> searchValue;

    for (i = 0; i < n; i++) {
        if (arr[i] == searchValue) {
            flag = 1;
            break;
        }
    }

    if (flag == 1)
        cout << "Element found at position " << i + 1 << endl;
    else
        cout << "Element not found!\n";

    // Sorting (Bubble Sort)
    for (int j = 0; j < n - 1; j++) {
        for (i = 0; i < n - j - 1; i++) {
            if (arr[i] > arr[i + 1]) {
                int temp = arr[i];
                arr[i] = arr[i + 1];
                arr[i + 1] = temp;
            }
        }
    }

    cout << "\nArray after sorting in ascending order: ";
    for (i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    return 0;
}
