#include <iostream>
using namespace std;

int main() {
    int A[2][2] = {
        {3, 4},
        {2, 1}
    };

    int B[2][2] = {
        {1, 5},
        {3, 7}
    };

    int C[2][2]; // Resultant matrix

    // Matrix addition
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            C[i][j] = A[i][j] + B[i][j];
        }
    }

